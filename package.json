{
  "name": "github-gifs",
  "version": "1.2.11",
  "description": "",
  "private": true,
  "scripts": {
    "build": "parcel build src/manifest.json --dist-dir distribution --no-cache --no-source-maps",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "xo",
    "test": "run-p lint:* build",
    "watch": "parcel watch src/manifest.json --target webext-dev --dist-dir distribution"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "xo": {
    "semicolon": false,
    "space": true,
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "browser"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-xo-space",
      "stylelint-config-prettier"
    ]
  },
  "dependencies": {
    "@giphy/js-fetch-api": "^1.7.0",
    "abort-utils": "^1.2.0",
    "code-tag": "^1.1.0",
    "debounce-fn": "^1.0.0",
    "delay": "^6.0.0",
    "delegate-it": "6.2.0",
    "dom-chef": "^3.3.0",
    "dom-loaded": "^3.1.0",
    "github-injection": "^1.1.0",
    "masonry-layout": "^4.2.2",
    "mem": "^8.1.1",
    "onetime": "^2.0.1",
    "select-dom": "^7.1.1",
    "text-field-edit": "^3.0.1",
    "webext-domain-permission-toggle": "^4.0.1",
    "webext-dynamic-content-scripts": "^10.0.0",
    "webextension-polyfill": "0.12.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.0",
    "@babel/plugin-transform-react-jsx": "7.25.2",
    "@parcel/config-webextension": "2.12.1-canary.3330",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "npm-run-all": "^4.1.5",
    "parcel": "2.0.0-canary.1705",
    "stylelint": "^13.10.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-xo-space": "^0.15.1",
    "xo": "^0.59.3"
  },
  "webExt": {
    "sourceDir": "distribution"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    }
  }
}
